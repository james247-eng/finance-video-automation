# API Configuration
API_SECRET_KEY=your_secret_api_key_for_authentication
NEXT_PUBLIC_API_RATE_LIMIT=10
NEXT_PUBLIC_API_RATE_WINDOW=3600

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Atlas Economy
NEXT_PUBLIC_APP_URL=https://yourdomain.com
